<!-- Example configuration file for NARS-console -->
<ROMcollections>

<!-- Nintendo ROMS -->
<collection name="Nintendo SNES" shortname="snes">
  <ROMsSource>/home/kodi/roms/roms-nintendo-snes/</ROMsSource>
  <ROMsDest  >/home/kodi/NUC-remote/ROMs/roms-nintendo-snes/</ROMsDest>

  <ThumbsSource>/home/kodi/roms/ArtWork/nintendo-snes-boxes/</ThumbsSource>
  <FanartSource>/home/kodi/roms/ArtWork/nintendo-snes-snaps/</FanartSource>
  <ThumbsDest  >/home/kodi/NUC-remote/ROMs/ArtWork/nintendo-snes-thumbs/</ThumbsDest>
  <FanartDest  >/home/kodi/NUC-remote/ROMs/ArtWork/nintendo-snes-fanart/</FanartDest>

  <filterUpTags>Europe, World, Rev 1</filterUpTags>
  <filterDownTags>Japan, Beta, Proto, France</filterDownTags>
  <includeTags>Europe, USA</includeTags>
  <excludeTags>Japan</excludeTags>
</collection>

<collection name="Nintendo SNES wit No-Intro DAT" shortname="snes_dat">
  <NoIntroDat>/home/kodi/roms/DAT/SNES Parent-Clone (20140608).dat</NoIntroDat>
  <ROMsSource>/home/kodi/roms/roms-nintendo-snes/</ROMsSource>
  <ROMsDest  >/home/kodi/NUC-remote/ROMs/roms-nintendo-snes/</ROMsDest>

  <ThumbsSource>/home/kodi/roms/ArtWork/nintendo-snes-boxes/</ThumbsSource>
  <FanartSource>/home/kodi/roms/ArtWork/nintendo-snes-snaps/</FanartSource>
  <ThumbsDest  >/home/kodi/NUC-remote/ROMs/ArtWork/nintendo-snes-thumbs/</ThumbsDest>
  <FanartDest  >/home/kodi/NUC-remote/ROMs/ArtWork/nintendo-snes-fanart/</FanartDest>

  <filterUpTags>Europe, World, Rev 1</filterUpTags>
  <filterDownTags>Japan, Beta, Proto, France</filterDownTags>
  <includeTags>Europe, USA</includeTags>
  <excludeTags>Japan</excludeTags>
</collection>

<!-- Sega ROMS -->
